<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="sensor"
            type="rmnvich.apps.coursework.modbus.domain.entity.base.Sensor" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/sensor_information_cardview_horizontal_margin"
            android:layout_marginEnd="@dimen/sensor_information_cardview_horizontal_margin"
            app:cardBackgroundColor="@color/colorForeground"
            app:cardCornerRadius="@dimen/sensor_information_cardview_corner_radius"
            app:contentPadding="@dimen/sensor_information_cardview_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sensor_information_tv_margin_bottom"
                    android:text='@{@string/name + ": " + sensor.sensorName}'
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sensor_information_tv_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sensor_information_tv_margin_bottom"
                    android:text='@{@string/manufacturer + ": " + sensor.sensorManufacturer}'
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sensor_information_tv_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sensor_information_tv_margin_bottom"
                    android:text='@{@string/version + ": " + sensor.sensorVersion}'
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sensor_information_tv_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_indications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{@string/indications + ": " + sensor.sensorIndications}'
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sensor_information_tv_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/colorAccent" />
        </android.support.v7.widget.CardView>
    </FrameLayout>
</layout>